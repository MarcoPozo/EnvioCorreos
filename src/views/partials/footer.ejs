<!-- SWEETALERT -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Success -->
<% if (success) { %>
    <script>
      Swal.fire({
        icon: "success",
        title: "¡Mensaje enviado!",
        text: "Tu mensaje fue enviado correctamente 🚀",
      });
    </script>
<% } %> 

<!-- Error -->
<% if (error) { %>
    <script>
      Swal.fire({
        icon: "error",
        title: "Error al enviar",
        text: "Hubo un problema al enviar el mensaje ❌",
      });
    </script>
<% } %>

</body>
