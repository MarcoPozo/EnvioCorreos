<!-- CUSTOM JS -->
<script src="/js/alert.js"></script>

<!-- Success -->
<% if (success) { %>
    <script>
      viewAlert("success", "!Mensaje enviado¡", "Tu mensaje fue enviado correctamente 🚀");
    </script>
<% } %> 

<!-- Error -->
<% if (error) { %>
    <script>
      viewAlert("error", "Error al enviar", "Hubo un problema al enviar el mensaje ❌");
    </script>
<% } %>

