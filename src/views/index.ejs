<%- include('partials/header.ejs') %>
<main class="flex-grow container mx-auto px-4 py-8">
  <section
    class="max-w-2xl mx-auto bg-fondo-secundario p-8 rounded-2xl shadow-xl"
  >
    <h2 class="text-2xl md:text-3xl font-semibold mb-6 text-center">
      Contáctanos
    </h2>

    <form action="/send-email" method="post" class="space-y-5">
      <!-- Nombre -->
      <div>
        <label for="name" class="block mb-1">Nombre completo</label>
        <input
          type="text"
          id="name"
          name="name"
          class="w-full px-4 py-2 rounded-lg bg-[#0B0F19] text-white focus:outline-none focus:ring-2 focus:ring-[#38BDF8]"
          required
        />
      </div>

      <!-- Telefono -->
      <div>
        <label for="phone" class="block text-white mb-1">Teléfono</label>
        <input
          type="tel"
          id="phone"
          name="phone"
          class="w-full px-4 py-2 rounded-lg bg-[#0B0F19] text-white focus:outline-none focus:ring-2 focus:ring-[#38BDF8]"
          required
        />
      </div>

      <!-- Correo -->
      <div>
        <label for="email" class="block text-white mb-1"
          >Correo electrónico</label
        >
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-2 rounded-lg bg-[#0B0F19] text-white focus:outline-none focus:ring-2 focus:ring-[#38BDF8]"
          required
        />
      </div>

      <!-- Mensaje -->
      <div>
        <label for="message" class="block text-white mb-1">Mensaje</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          class="w-full px-4 py-2 rounded-lg bg-[#0B0F19] text-white focus:outline-none focus:ring-2 focus:ring-[#38BDF8] resize-none"
          required
        ></textarea>
      </div>

      <!-- Botón Enviar -->
      <div class="text-center">
        <button
          type="submit"
          class="bg-[#38BDF8] hover:bg-[#67E8F9] text-black font-semibold py-2 px-6 rounded-lg transition duration-300"
        >
          Enviar mensaje
        </button>
      </div>
    </form>
  </section>
</main>

<%- include('partials/footer.ejs') %>
